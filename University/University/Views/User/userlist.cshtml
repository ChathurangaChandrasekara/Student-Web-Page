                    @Html.DisplayFor(modelItem => item.EPNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacultyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchId)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.UserId }) |

                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete Id = @item.UserId')" />


                </td>
            </tr>
        }
    }

